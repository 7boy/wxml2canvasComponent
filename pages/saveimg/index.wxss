/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
image {
  width: 100%;
  height: 30px
}
canvas {
  position: absolute;
  width: 100%;
  height: 30px
}
.box {
  position: absolute;
	bottom: 0;
	height: 546px;
	width: 100%;
	background: #fff;
	box-sizing: border-box;
	border-radius: 12px 12px 0 0;
	overflow: hidden;
}
.shadow {
  position: absolute;
	height: 100%;
	width: 100%;
	background: rgba(0, 0, 0, .2);
}